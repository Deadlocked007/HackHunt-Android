<?xml version="1.0" encoding="utf-8"?>
<com.sirajzaneer.hackhunt.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/posterImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:text="SomeHacakthon"
        android:id="@+id/hackathonLocation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="SomeHacakthon"
        android:id="@+id/hackathonDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="#ffffffff"
        android:layout_above="@+id/hackathonLocation"
        android:layout_alignParentStart="true" />

    <TextView
    android:text="SomeHacakthon"
        android:id="@+id/hackathonName"
        android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:background="#ffffffff"
        android:layout_above="@+id/hackathonDate"
        android:layout_alignParentStart="true" />
</com.sirajzaneer.hackhunt.SquareLayout>
